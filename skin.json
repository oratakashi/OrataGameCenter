{
    "Conditions": {
        "Gamepage sidebar on left": {
            "description": "Changes the sidebar on the game page from right to left",
            "default": "no",
            "tab": "General",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": [
                            "^Steam$"
                        ],
                        "src": "options/general/gamepageSidebarLeft.css"
                    }
                }
            }
        },
        "Navigation Mode": {
            "description": "Move Navigation buttons location",
            "default": "Top",
            "tab": "Navigation",
            "values": {
                "Top": {
                    "TargetCss": {
